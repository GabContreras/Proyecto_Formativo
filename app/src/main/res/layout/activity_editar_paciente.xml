<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editar_paciente">

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EdiciÃ³n de paciente"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.073" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="105dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/txtNombrePacienteEditar"
        android:layout_width="298dp"
        android:layout_height="48dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/txt_registro"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <EditText
        android:id="@+id/txtApellidoPacienteEditar"
        android:layout_width="298dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/txt_registro"
        android:ems="10"
        android:hint="Apellido"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNombrePacienteEditar" />

    <EditText
        android:id="@+id/txtEdadPacienteEditar"
        android:layout_width="298dp"
        android:layout_height="48dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/txt_registro"
        android:ems="10"
        android:hint="Edad"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtApellidoPacienteEditar" />

    <EditText
        android:id="@+id/txtEnfermedadPacienteEditar"
        android:layout_width="298dp"
        android:layout_height="78dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/txt_registro"
        android:ems="10"
        android:hint="Enfermedad"
        android:inputType="textMultiLine"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEdadPacienteEditar" />

    <EditText
        android:id="@+id/txtFechaDeIngresoPacienteEditar"
        android:layout_width="298dp"
        android:layout_height="48dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/txt_registro"
        android:ems="10"
        android:focusable="false"
        android:hint="Fecha de ingreso"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEnfermedadPacienteEditar" />

    <ImageButton
        android:id="@+id/btnRegistrarPacienteEditar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFEFE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtFechaDeIngresoPacienteEditar"
        app:srcCompat="@drawable/editar_paciente" />

    <ImageView
        android:id="@+id/btnSalir"
        android:layout_width="51dp"
        android:layout_height="49dp"
        app:layout_constraintBottom_toTopOf="@+id/txtNombrePacienteEditar"
        app:layout_constraintEnd_toStartOf="@+id/imageView5"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.205"
        app:srcCompat="@drawable/baseline_arrow_back_24" />
</androidx.constraintlayout.widget.ConstraintLayout>